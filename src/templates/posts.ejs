<html lang="en"></html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/style.css">
    <script src= "/static/post.js" defer></script>
    <title>Posts</title>
</head>
<body class="b_posts">
    <h1 id="posts_title">Вироби</h1>
    <div class="p_div">
        
        <% posts.forEach((post) => { %>
            <div class="posts">
                <h2><%= post.name %></h2>
                <img src="<%= post.img %>" alt="">
                <p><%= post.description%></p>
                <a href="/posts/<%= post.id %>">Пост</a>
            </div>

        <% }) %>
    </div>
    <button id='button' type="button">Створити виріб</button>


   

</body>
</html>